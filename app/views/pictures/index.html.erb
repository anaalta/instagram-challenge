<h1>Gallery</h1>

<%= link_to new_picture_path do%>
New picture
<%end%>
<% @pictures.reverse.each do |picture| %>
<% @picture = picture %>

  <h3><%= picture.title %></h3>
  <div class = 'center'>
  <%= image_tag picture.image.url (:unique)%>
  </div>
  <figcaption>
    <%= link_to like_picture_path(picture), method: :put do %>
    Upvote
    <%= picture.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_picture_path(picture), method: :put do %>
    Downvote
    <%= picture.get_downvotes.size %>
    <% end %>
    <p><%=picture.comments.count%>
      comments
    </p>
    <%= render picture.comments%>
    <p>Add a comment:</p>
    <%= render 'comments/form'%>
    <% end %>
  </figcaption>
